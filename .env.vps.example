# ============================================
# WOUAKA VPS - ENVIRONMENT VARIABLES
# ============================================
# Copy this to .env and configure for production
# ============================================

# ============================================
# DATABASE
# ============================================
POSTGRES_PASSWORD=change-this-to-a-secure-password-2026
POSTGRES_DB=wouaka
POSTGRES_USER=postgres

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=generate-a-secure-random-string-at-least-32-characters-long

# ============================================
# MINIO STORAGE
# ============================================
MINIO_ACCESS_KEY=wouaka-access-key
MINIO_SECRET_KEY=change-this-to-a-secure-secret-min-8-chars

# ============================================
# CINETPAY PAYMENTS
# ============================================
CINETPAY_API_KEY=your-cinetpay-api-key
CINETPAY_SITE_ID=your-cinetpay-site-id
CINETPAY_SECRET_KEY=your-cinetpay-secret-key

# ============================================
# SMILE ID (KYC)
# ============================================
SMILE_ID_PARTNER_ID=your-smile-id-partner-id
SMILE_ID_API_KEY=your-smile-id-api-key

# ============================================
# COMMUNICATIONS
# ============================================
RESEND_API_KEY=your-resend-api-key
AFRICASTALKING_API_KEY=your-africastalking-api-key
AFRICASTALKING_USERNAME=your-africastalking-username

# ============================================
# AI PROVIDER
# ============================================
# Options: ollama, deepseek
AI_PROVIDER=ollama
DEEPSEEK_API_KEY=your-deepseek-api-key

# ============================================
# PGADMIN (Optional)
# ============================================
PGADMIN_PASSWORD=wouaka-admin-password

# ============================================
# URLS
# ============================================
FRONTEND_URL=https://www.wouaka-creditscore.com
API_URL=https://api.wouaka-creditscore.com
MINIO_PUBLIC_URL=https://storage.wouaka-creditscore.com
